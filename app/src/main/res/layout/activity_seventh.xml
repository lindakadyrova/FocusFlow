<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#EDEDED"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeventhActivity">

    <include
        layout="@layout/header"
        android:id="@+id/header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/doneTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DONE!"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="#727272"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/thoughtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="How long you thought\nthis task was going to take:"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#727272"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@id/doneTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/estimatedTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30 minutes"
        android:textSize="28sp"
        android:textColor="#A0A0A0"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/thoughtTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/actualTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="And here is how long\nit actually took:"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#727272"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@id/estimatedTimeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/actualTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="55 minutes"
        android:textSize="28sp"
        android:textColor="#A0A0A0"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/actualTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/backToTasksButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Back to Tasks"
        android:background="@drawable/button_color"
        android:textColor="@color/white"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>